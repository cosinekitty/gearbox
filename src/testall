#!/bin/bash

Fail()
{
    echo "FAIL($0): $1"
    exit 1
}

cd BoardTest || Fail "Could not change to BoardTest directory."
dotnet run -- all || Fail "BoardTest"

cd ../PossibleMates || Fail "Could not change to PossibleMates directory."
./testmates || exit $?

cd ../EndgameTableGen || Fail "Could not change to EndgameTableGen directory."
./selftest || exit $?

cd .. || Fail "Could not change back to src directory."
cat pass.txt
exit 0
